{{#if showNewUser}}
    {{#modal-dialog onClose="toggleNewUser" targetAttachment="center" translucentOverlay=true}}
        <h3><span class="glyphicon glyphicon-plus-sign"></span>  Dodaj novog korisnika</h3>
            <br>
        <form class="col-md-12">
            <div class="form-group">
                {{validated-input type="text" model=model placeholder="Ime" valuePath="user.firstName"}}
            </div>
            <div class="form-group">
                {{validated-input type="text" model=model placeholder="Prezime" valuePath="user.lastName"}}
            </div>
            <div class="form-group">
                {{validated-input type="text" model=model placeholder="Username" valuePath="user.username"}}
            </div>
            <div class="form-group">
                {{validated-input type="password" model=model placeholder="Password" valuePath="user.password"}}
            </div>
            <div class="form-group">
                <select class="form-control" onchange= {{action "selectRole" value="target.value"}}>
                    <option value="0" selected= {{eq role 0}}>Profesor</option>
                    <option value="1" selected= {{eq role 1}}>Operator</option>
                    <option value="2" selected= {{eq role 2}}>Admin</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary" disabled={{v-get this 'isInvalid'}} {{action "add"}}>Dodaj</button>
        </form>
    {{/modal-dialog}}
{{/if}}


